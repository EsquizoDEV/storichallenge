{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2020", // Target modern JavaScript
    "module": "CommonJS", // Set module system for Node.js
    "lib": ["ES2020"], // Use ES2020 library for types
    "strict": true, // Enable all strict type-checking options

    /* Module Resolution Options */
    "moduleResolution": "node", // Use Node.js module resolution
    "esModuleInterop": true, // Allow ES modules interop
    "forceConsistentCasingInFileNames": true, // Ensure consistent file casing

    /* Type Checking Options */
    "skipLibCheck": true, // Skip type checking for all .d.ts files

    /* Emit Options */
    "outDir": "./dist", // Redirect output structure to the dist directory

    /* Source Map Options */
    "sourceMap": true // Create source map files for debugging
  },
  "include": ["./**/*.ts"], // Include all .ts files at the root and subdirectories
  "exclude": ["node_modules", "dist"] // Exclude node_modules and dist from compilation
}
